# Default to neovim for commit messages and stuff
[core]
  editor = nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  pager = diff-so-fancy | less --tabs=4 -RFX

# Color settings
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = "red"
	oldHighlight = "red 52"
	newNormal = "green"
	newHighlight = "green 22"
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# Show the diff when writing commit message
[commit]
  verbose = true

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current

# Aliases
[alias]
  # FZF
	fadd = !sh -c \"git add $(git ls-files -dom --exclude-standard | sort -u | fzf -m | xargs)\"
	fco  = !sh -c \"git checkout $(git branch | fzf)\"
	ffco = !sh -c \"git checkout $(git ls-files -dom --exclude-standard | sort -u | fzf -m | xargs)\"
	dsf  = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"

# use separate file for username / github token / etc
[include]
  path = ~/.gitconfig.local
[diff-so-fancy]
	stripLeadingSymbols = false
	markEmptyLines = false
[pull]
	rebase = true
